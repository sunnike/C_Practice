@echo off


if "%1" == "" goto cant_run2
if "%2" == "" goto cant_run3

echo checking directories...

cd ..
if not exist "lib" mkdir "lib"
if not exist "lib\Inc" mkdir "lib\Inc"
if not exist "lib\%3" mkdir "lib\%3"

echo copying %2 (%3) files ...

copy /y %1\INC\*.h lib\Inc
copy /y %1\%2\*.a lib\%2

goto done

:cant_run2
echo no project
goto done

:cant_run3
echo no configuration
goto done

:done
pause